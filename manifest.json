{
  "manifest_version": 3,
  "name": "Konoho Ranking Card Filter",
  "version": "1.0",
  "description": "コのほけん！で商品を指定してランキングカードをフィルタリングする拡張機能です。",
  "author": {
    "email": "nekonadocat@gmail.com"
  },
  "permissions": [
    "scripting"
  ],
  "icons": {
    "16": "img/icon128.png",
    "48": "img/icon128.png",
    "128": "img/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "img/icon128.png"
  }
}